<%= render partial: "search_form", locals: {species: @species} %>

<% if @pets %>
  <h3>Available animals within <%= @radius %> miles of <%= @zipcode %></h3>

  <% @pets.each_pair do |id, pet| %>
    <ul>
      <li><img src="<%= pet["animalPictures"][0]["urlInsecureThumbnail"] %>" alt="<%= pet["animalName"] %>"></li>
      <li class="pet-name">Name: <%= pet["animalName"] %> </li>
      <li> Breed: <%= pet["animalBreed"] %> </li>
      <li> Zip Code: <%= pet["animalLocation"] %> </li>
      <li> Organization ID: <%= pet["animalOrgID"] %> </li>
    </ul>
  <% end %>
<% end %>
